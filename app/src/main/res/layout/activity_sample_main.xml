<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SampleMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_convert_to_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/convert_to_gray"/>

        <Button
            android:id="@+id/btn_gaussian_blur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gaussian_blur"/>

        <Button
            android:id="@+id/btn_draw_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/draw_text"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>